{
    "name": "qubus/dbal",
    "type": "library",
    "description": "Database abstraction layer.",
    "keywords": ["database","querybuilder","dbal","database abstraction"],
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "josh@joshuaparker.blog"
        }
    ],
    "require": {
        "php": "^8.0",
        "qubus/exception": "^1.2",
        "qubus/valueobjects": "^1.3"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.0",
        "mockery/mockery": "^1.3.1",
        "php-coveralls/php-coveralls": "^1.0",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.3.1"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\Dbal\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
        "Qubus\\Tests\\Dbal\\": "Tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
